    script(type="text/javascript")

    h1.title(style='font-size:3em;margin-bottom:5vh;')= title
    .container-fluid
        .row
            .col-md-3.col-md-offset-1
                h2.text-primary Operation
            .col-md-3.col-md-offset-1
                h2.text-primary Navigation
            .col-md-3.col-md-offset-1
                h2.text-primary Thermal Camera
        .row
            .col-md-4
                <div class="clearfix" style="margin-bottom: 40px;"></div>
                .row
                    .col-md-1.col-md-offset-4
                        button(onclick='funcAccForward()',type="button").btn.btn-success.btn-lg +
                <div class="clearfix" style="margin-bottom: 20px;"></div>
                .row
                    .col-md-1.col-md-offset-4
                        button(onclick='funcNormalForward()',type="button").btn.btn-warning.btn-lg D
                <div class="clearfix" style="margin-bottom: 40px;"></div>
                .row
                    .col-md-1
                        button(onclick='funcAccLeft()',type="button").btn.btn-success.btn-lg +
                    .col-md-1.col-md-offset-1
                        button(onclick='funcNormalLeft()',type="button").btn.btn-warning.btn-lg <
                    .col-md-1.col-md-offset-1
                        button(onclick='funcStop()',type="button").btn.btn-danger.btn-lg P
                    .col-md-1.col-md-offset-1
                        button(onclick='funcNormalRight()',type="button").btn.btn-warning.btn-lg >
                    .col-md-1.col-md-offset-1
                        button(onclick='funcAccRight()',type="button").btn.btn-success.btn-lg +
                <div class="clearfix" style="margin-bottom: 40px;"></div>
                .row
                    .col-md-1.col-md-offset-4
                        button(onclick='funcNormalBack()',type="button").btn.btn-warning.btn-lg R
                <div class="clearfix" style="margin-bottom: 20px;"></div>
                .row
                    .col-md-1.col-md-offset-4
                        button(onclick='funcAccBack()',type="button").btn.btn-success.btn-lg +
            .col-md-4
                <div class="clearfix" style="margin-bottom: 40px;"></div>
                #nav
            .col-md-4
                <div class="clearfix" style="margin-bottom: 40px;"></div>
                #mjpeg
    script(src="/javascripts/example.js")
